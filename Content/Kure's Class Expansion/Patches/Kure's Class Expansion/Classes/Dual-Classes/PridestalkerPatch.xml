<Patch>
	<!--Learning Objects Patch-->
	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/ThingDef[defName="BookOfPridestalker"]</xpath>
		<value>
			<li Class="LifeLessons.BillProficiencyExtension">
				<requirements>
					<li>LLRoM_BindingII</li>
					<li>LLRoM_Ranged</li>
				</requirements>
				<hardRequirement>True</hardRequirement>
			</li>
		</value>
	</Operation>
	<!--Learning object recipe patch-->
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="BookOfPridestalker"]</xpath>
		<value>
			<costList>
				<RawMagicyte>100</RawMagicyte>
				<UnfinishedAdvArcane>1</UnfinishedAdvArcane>
			</costList>
			<recipeMaker>
				<workAmount>3500</workAmount>
				<workSpeedStat>WorkSpeedGlobal</workSpeedStat>
				<workSkill>Intellectual</workSkill>
				<recipeUsers>
					<li>TableMagicPrinter</li>
				</recipeUsers>
				<effectWorking>Smelt</effectWorking>
				<unfinishedThingDef>UnfinishedWeapon</unfinishedThingDef>
				<skillRequirements>
					<Crafting>6</Crafting>
					<Intellectual>8</Intellectual>
				</skillRequirements>
				<researchPrerequisite>
					<li>TM_AdvancedScribing</li>
				</researchPrerequisite>
			</recipeMaker>
		</value>
	</Operation>
	<!--Trait Patch-->
	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/TraitDef[defName="TM_Pridestalker"]</xpath>
		<value>
			<li Class="LifeLessons.BackstoryProficiencyExtension">
				<patchStatusOverride>False</patchStatusOverride>       
				<templates>
					<li>LLROM_Binding</li>
					<li>LLROM_Ranged</li>
				</templates>
				<package>
					<conditionalTemplates>
						<li>
							<options>
								<li>LLROM_Scribe</li>
							</options>
							<rolls>1</rolls>
							<chancePerRoll>.5</chancePerRoll>
						</li>
					</conditionalTemplates>
				</package>
			</li>
		</value>
	</Operation>
	
	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/TraitDef[defName="TM_Pridestalker"]</xpath>
		<value>
			<li Class="LLRoM.ClassAutoLearnExtension">
				<RequiredProficiencies>
					<li>LLRoM_BindingII</li>
					<li>LLRoM_Ranged</li>
				</RequiredProficiencies>
				<RequiredTrait>
					<li>TM_Gifted</li>
					<li>PhysicalProdigy</li>
				</RequiredTrait>
				<appliedHediff>LLRoM_Drained</appliedHediff>
				<Prefix>a </Prefix>
				<Magic>true</Magic>
				<Might>true</Might>
			</li>
		</value>
	</Operation>
