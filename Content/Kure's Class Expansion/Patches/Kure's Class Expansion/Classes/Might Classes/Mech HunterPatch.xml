<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<!--Learning Objects Patch-->
	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/ThingDef[defName="BookOfMechHunter"]</xpath>
		<value>
			<li Class="LifeLessons.BillProficiencyExtension">
				<requirements>
					<li>LLRoM_Ranged</li>
					<li>LLRoM_Tactics</li>
				</requirements>
				<hardRequirement>True</hardRequirement>
			</li>
		</value>
	</Operation>
	<!--Learning object recipe patch-->
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="BookOfMechHunter"]</xpath>
		<value>
			<costList>
				<RawMagicyte>50</RawMagicyte>
				<UnfinishedMartial>1</UnfinishedMartial>
			</costList>
			<recipeMaker>		    
				<workAmount>2500</workAmount>
				<workSpeedStat>WorkSpeedGlobal</workSpeedStat>
				<workSkill>Intellectual</workSkill>
				<recipeUsers>
					<li>TableMagicPrinter</li>
				</recipeUsers>
				<effectWorking>Smelt</effectWorking>
				<unfinishedThingDef>UnfinishedWeapon</unfinishedThingDef>
				<skillRequirements>
					<Crafting>4</Crafting>
					<Intellectual>8</Intellectual>
				</skillRequirements>
			</recipeMaker>
		</value>
	</Operation>
	<!--Trait Patch-->
	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/TraitDef[defName="TM_MechHunter"]</xpath>
		<value>
			<li Class="LifeLessons.BackstoryProficiencyExtension">
				<patchStatusOverride>False</patchStatusOverride>       
				<templates>
					<li>LLROM_Ranged</li>
					<li>LLROM_Mental</li>
				</templates>
				<package>
					<conditionalTemplates>
						<li>
							<options>
								<li>LLROM_Scribe</li>
							</options>
							<rolls>1</rolls>
							<chancePerRoll>.5</chancePerRoll>
						</li>
					</conditionalTemplates>
				</package>
			</li>
		</value>
	</Operation>
	
	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/TraitDef[defName="TM_MechHunter"]</xpath>
		<value>
			<li Class="LLRoM.ClassAutoLearnExtension">
				<RequiredProficiencies>
					<li>LLRoM_Ranged</li>
					<li>LLRoM_Tactics</li>
				</RequiredProficiencies>
				<RequiredTrait>
					<li>PhysicalProdigy</li>
				</RequiredTrait>
				<appliedHediff>LLRoM_Drained</appliedHediff>
				<Prefix>a </Prefix>
				<Might>true</Might>
			</li>
		</value>
	</Operation>
	<!--Ability Cast Patch-->
	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/TorannMagic.TMAbilityDef[defName="TM_EAPShell"
											or defName="TM_FragmentationShot"
											or defName="TM_Starshot"
											or defName="TM_Destabilizer"
											or defName="TM_HookshotB"]</xpath>
		<value>
			<li Class="LLRoM.AbilityXPGainExtension">
				<Proficiencies>
					<li>LLRoM_Equipment_Mastery</li>
				</Proficiencies>
				<experienceType>Practical</experienceType>
				<LearnRate>1</LearnRate>
			</li>
		</value>
	</Operation>
	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/TorannMagic.TMAbilityDef[defName="TM_EAPShell_I"
											or defName="TM_FragmentationShot_I"
											or defName="TM_Starshot_I"]</xpath>
		<value>
			<li Class="LLRoM.AbilityXPGainExtension">
				<Proficiencies>
					<li>LLRoM_Ranged</li>
				</Proficiencies>
				<experienceType>Practical</experienceType>
				<LearnRate>1</LearnRate>
			</li>
		</value>
	</Operation>
	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/TorannMagic.TMAbilityDef[defName="TM_EAPShell_II"
											or defName="TM_FragmentationShot_II"
											or defName="TM_FragmentationShot_III"
											or defName="TM_Starshot_II"
											or defName="TM_Starshot_III"
											or defName="TM_NaniteBullet"]</xpath>
		<value>
			<li Class="LLRoM.AbilityXPGainExtension">
				<Proficiencies>
					<li>LLRoM_Ranged</li>
					<li>LLRoM_Tactics</li>
				</Proficiencies>
				<experienceType>Practical</experienceType>
				<LearnRate>1</LearnRate>
			</li>
		</value>
	</Operation>
	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/TorannMagic.TMAbilityDef[defName="TM_EAPShell_III"]</xpath>
		<value>
			<li Class="LLRoM.AbilityXPGainExtension">
				<Proficiencies>
					<li>LLRoM_Extreme_Range</li>
					<li>LLRoM_Tactics</li>
				</Proficiencies>
				<experienceType>Practical</experienceType>
				<LearnRate>1</LearnRate>
			</li>
		</value>
	</Operation>
	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/TorannMagic.TMAbilityDef[defName="TM_Destabilizer_I"
											or defName="TM_HookshotB_I"]</xpath>
		<value>
			<li Class="LLRoM.AbilityXPGainExtension">
				<Proficiencies>
					<li>LLRoM_Ranged</li>
					<li>LLRoM_Physical_Conditioning</li>
				</Proficiencies>
				<experienceType>Practical</experienceType>
				<LearnRate>1</LearnRate>
			</li>
		</value>
	</Operation>
	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/TorannMagic.TMAbilityDef[defName="TM_Destabilizer_II"
											or defName="TM_Destabilizer_III"]</xpath>
		<value>
			<li Class="LLRoM.AbilityXPGainExtension">
				<Proficiencies>
					<li>LLRoM_Ranged</li>
					<li>LLRoM_Coordination</li>
				</Proficiencies>
				<experienceType>Practical</experienceType>
				<LearnRate>1</LearnRate>
			</li>
		</value>
	</Operation>
	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/TorannMagic.TMAbilityDef[defName="TM_HookshotB_II"
											or defName="TM_HookshotB_III"]</xpath>
		<value>
			<li Class="LLRoM.AbilityXPGainExtension">
				<Proficiencies>
					<li>LLRoM_Ranged</li>
					<li>LLRoM_Strength</li>
				</Proficiencies>
				<experienceType>Practical</experienceType>
				<LearnRate>1</LearnRate>
			</li>
		</value>
	</Operation>
</Patch>