<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<!--Learning Objects Patch-->
	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/ThingDef[defName="BookOfGunbreaker"]</xpath>
		<value>
			<li Class="LifeLessons.BillProficiencyExtension">
				<requirements>
					<li>LLRoM_Equipment_Mastery</li>
					<li>LLRoM_Strength</li>
				</requirements>
				<hardRequirement>True</hardRequirement>
			</li>
		</value>
	</Operation>
	<!--Learning object recipe patch-->
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="BookOfGunbreaker"]</xpath>
		<value>
			<costList>
				<RawMagicyte>50</RawMagicyte>
				<UnfinishedMartial>1</UnfinishedMartial>
			</costList>
			<recipeMaker>		    
				<workAmount>2500</workAmount>
				<workSpeedStat>WorkSpeedGlobal</workSpeedStat>
				<workSkill>Intellectual</workSkill>
				<recipeUsers>
					<li>TableMagicPrinter</li>
				</recipeUsers>
				<effectWorking>Smelt</effectWorking>
				<unfinishedThingDef>UnfinishedWeapon</unfinishedThingDef>
				<skillRequirements>
					<Crafting>4</Crafting>
					<Intellectual>8</Intellectual>
				</skillRequirements>
			</recipeMaker>
		</value>
	</Operation>
	<!--Trait Patch-->
	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/TraitDef[defName="TM_Gunbreaker"]</xpath>
		<value>
			<li Class="LifeLessons.BackstoryProficiencyExtension">
				<patchStatusOverride>False</patchStatusOverride>       
				<templates>
					<li>LLROM_Melee</li>
					<li>LLROM_Physical</li>
				</templates>
				<package>
					<conditionalTemplates>
						<li>
							<options>
								<li>LLROM_Scribe</li>
							</options>
							<rolls>1</rolls>
							<chancePerRoll>.5</chancePerRoll>
						</li>
					</conditionalTemplates>
				</package>
			</li>
		</value>
	</Operation>
	
	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/TraitDef[defName="TM_Gunbreaker"]</xpath>
		<value>
			<li Class="LLRoM.ClassAutoLearnExtension">
				<RequiredProficiencies>
					<li>LLRoM_Equipment_Mastery</li>
					<li>LLRoM_Strength</li>
				</RequiredProficiencies>
				<RequiredTrait>
					<li>PhysicalProdigy</li>
				</RequiredTrait>
				<appliedHediff>LLRoM_Drained</appliedHediff>
				<Prefix>a </Prefix>
				<Might>true</Might>
			</li>
		</value>
	</Operation>
	<!--Ability Cast Patch-->
	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/TorannMagic.TMAbilityDef[defName="TM_Reload"
											or defName="TM_DangerZone"
											or defName="TM_BrutalShell"
											or defName="TM_RoughDivide"
											or defName="TM_SonicBreak"
											or defName="TM_BowShock"
											or defName="TM_JugularRip"]</xpath>
		<value>
			<li Class="LLRoM.AbilityXPGainExtension">
				<Proficiencies>
					<li>LLRoM_Equipment_Mastery</li>
				</Proficiencies>
				<experienceType>Practical</experienceType>
				<LearnRate>1</LearnRate>
			</li>
		</value>
	</Operation>
	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/TorannMagic.TMAbilityDef[defName="TM_DangerZone_I"
											or defName="TM_BrutalShell_I"
											or defName="TM_RoughDivide_I"
											or defName="TM_SonicBreak_I"
											or defName="TM_BowShock_I"
											or defName="TM_JugularRip_I"
											or defName="TM_Nebula"]</xpath>
		<value>
			<li Class="LLRoM.AbilityXPGainExtension">
				<Proficiencies>
					<li>LLRoM_Equipment_Mastery</li>
					<li>LLRoM_Physical_Conditioning</li>
				</Proficiencies>
				<experienceType>Practical</experienceType>
				<LearnRate>1</LearnRate>
			</li>
		</value>
	</Operation>
	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/TorannMagic.TMAbilityDef[defName="TM_DangerZone_II"
											or defName="TM_DangerZone_III"
											or defName="TM_BrutalShell_II"
											or defName="TM_BrutalShell_III"]</xpath>
		<value>
			<li Class="LLRoM.AbilityXPGainExtension">
				<Proficiencies>
					<li>LLRoM_CQC</li>
					<li>LLRoM_Strength</li>
				</Proficiencies>
				<experienceType>Practical</experienceType>
				<LearnRate>1</LearnRate>
			</li>
		</value>
	</Operation>
	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/TorannMagic.TMAbilityDef[defName="TM_RoughDivide_II"
											or defName="TM_RoughDivide_III"]</xpath>
		<value>
			<li Class="LLRoM.AbilityXPGainExtension">
				<Proficiencies>
					<li>LLRoM_CQC</li>
					<li>LLRoM_Coordination</li>
				</Proficiencies>
				<experienceType>Practical</experienceType>
				<LearnRate>1</LearnRate>
			</li>
		</value>
	</Operation>
	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/TorannMagic.TMAbilityDef[defName="TM_SonicBreak_II"
											or defName="TM_SonicBreak_III"
											or defName="TM_BowShock_II"
											or defName="TM_BowShock_III"
											or defName="TM_Nebula_I"
											or defName="TM_Nebula_II"]</xpath>
		<value>
			<li Class="LLRoM.AbilityXPGainExtension">
				<Proficiencies>
					<li>LLRoM_CQC</li>
					<li>LLRoM_Endurance</li>
				</Proficiencies>
				<experienceType>Practical</experienceType>
				<LearnRate>1</LearnRate>
			</li>
		</value>
	</Operation>
	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/TorannMagic.TMAbilityDef[defName="TM_JugularRip_II"
											or defName="TM_JugularRip_III"]</xpath>
		<value>
			<li Class="LLRoM.AbilityXPGainExtension">
				<Proficiencies>
					<li>LLRoM_CQC</li>
				</Proficiencies>
				<experienceType>Practical</experienceType>
				<LearnRate>1</LearnRate>
			</li>
		</value>
	</Operation>
	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/TorannMagic.TMAbilityDef[defName="TM_Nebula_III"]</xpath>
		<value>
			<li Class="LLRoM.AbilityXPGainExtension">
				<Proficiencies>
					<li>LLRoM_Defensive_Fighting</li>
					<li>LLRoM_Endurance</li>
				</Proficiencies>
				<experienceType>Practical</experienceType>
				<LearnRate>1</LearnRate>
			</li>
		</value>
	</Operation>
</Patch>