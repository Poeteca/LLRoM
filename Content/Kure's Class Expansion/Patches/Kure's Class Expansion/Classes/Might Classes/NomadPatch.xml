	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/TorannMagic.TMAbilityDef[defName="TM_BroadheadArrow_I"
											or defName="TM_ShadowShot_I"
											or defName="TM_SunShot_I"
