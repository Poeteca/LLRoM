<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<!--Learning Objects Patch-->
	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/ThingDef[defName="BookOfDragoon"]</xpath>
		<value>
			<li Class="LifeLessons.BillProficiencyExtension">
				<requirements>
					<li>LLRoM_CQC</li>
					<li>LLRoM_Coordination</li>
				</requirements>
				<hardRequirement>True</hardRequirement>
			</li>
		</value>
	</Operation>
	<!--Learning object recipe patch-->
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="BookOfDragoon"]</xpath>
		<value>
			<costList>
				<RawMagicyte>50</RawMagicyte>
				<UnfinishedMartial>1</UnfinishedMartial>
			</costList>
			<recipeMaker>		    
				<workAmount>2500</workAmount>
				<workSpeedStat>WorkSpeedGlobal</workSpeedStat>
				<workSkill>Intellectual</workSkill>
				<recipeUsers>
					<li>TableMagicPrinter</li>
				</recipeUsers>
				<effectWorking>Smelt</effectWorking>
				<unfinishedThingDef>UnfinishedWeapon</unfinishedThingDef>
				<skillRequirements>
					<Crafting>4</Crafting>
					<Intellectual>8</Intellectual>
				</skillRequirements>
			</recipeMaker>
		</value>
	</Operation>
	<!--Trait Patch-->
	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/TraitDef[defName="TM_Dragoon"]</xpath>
		<value>
			<li Class="LifeLessons.BackstoryProficiencyExtension">
				<patchStatusOverride>False</patchStatusOverride>       
				<templates>
					<li>LLROM_Melee</li>
					<li>LLROM_Physical</li>
				</templates>
				<package>
					<conditionalTemplates>
						<li>
							<options>
								<li>LLROM_Scribe</li>
							</options>
							<rolls>1</rolls>
							<chancePerRoll>.5</chancePerRoll>
						</li>
					</conditionalTemplates>
				</package>
			</li>
		</value>
	</Operation>
	
	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/TraitDef[defName="TM_Dragoon"]</xpath>
		<value>
			<li Class="LLRoM.ClassAutoLearnExtension">
				<RequiredProficiencies>
					<li>LLRoM_CQC</li>
					<li>LLRoM_Coordination</li>
				</RequiredProficiencies>
				<RequiredTrait>
					<li>PhysicalProdigy</li>
				</RequiredTrait>
				<appliedHediff>LLRoM_Drained</appliedHediff>
				<Prefix>a </Prefix>
				<Might>true</Might>
			</li>
		</value>
	</Operation>
	<!--Ability Cast Patch-->
	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/TorannMagic.TMAbilityDef[defName="TM_Jump"
											or defName="TM_Jump_I"
											or defName="TM_SpineshatterDive"
											or defName="TM_SpineshatterDive_I"
											or defName="TM_DragonfireDive"
											or defName="TM_DragonfireDive_I"
											or defName="TM_SpiralDive"
											or defName="TM_SpiralDive_I"
											or defName="TM_MirageDive"
											or defName="TM_MirageDive_I"
											or defName="TM_SonicThrust"
											or defName="TM_SonicThrust_I"
											or defName="TM_Disembowel"
											or defName="TM_Disembowel_I"
											or defName="TM_Geirskogul"
											or defName="TM_Geirskogul_I"]</xpath>
		<value>
			<li Class="LLRoM.AbilityXPGainExtension">
				<Proficiencies>
					<li>LLRoM_Physical_Conditioning</li>
				</Proficiencies>
				<experienceType>Practical</experienceType>
				<LearnRate>1</LearnRate>
			</li>
		</value>
	</Operation>
	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/TorannMagic.TMAbilityDef[defName="TM_Jump_II"]</xpath>
		<value>
			<li Class="LLRoM.AbilityXPGainExtension">
				<Proficiencies>
					<li>LLRoM_Coordination</li>
				</Proficiencies>
				<experienceType>Practical</experienceType>
				<LearnRate>1</LearnRate>
			</li>
		</value>
	</Operation>
	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/TorannMagic.TMAbilityDef[defName="TM_Jump_III"]</xpath>
		<value>
			<li Class="LLRoM.AbilityXPGainExtension">
				<Proficiencies>
					<li>LLRoM_Coordination</li>
					<li>LLRoM_Strength</li>
				</Proficiencies>
				<experienceType>Practical</experienceType>
				<LearnRate>1</LearnRate>
			</li>
		</value>
	</Operation>
	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/TorannMagic.TMAbilityDef[defName="TM_SpineshatterDive_II"
											or defName="TM_DragonfireDive_II"
											or defName="TM_SpiralDive_II"
											or defName="TM_MirageDive_II"
											or defName="TM_MirageDive_III"
											or defName="TM_SonicThrust_II"
											or defName="TM_SonicThrust_III"
											or defName="TM_Geirskogul_II"
											or defName="TM_Geirskogul_III"]</xpath>
		<value>
			<li Class="LLRoM.AbilityXPGainExtension">
				<Proficiencies>
					<li>LLRoM_Coordination</li>
					<li>LLRoM_CQC</li>
				</Proficiencies>
				<experienceType>Practical</experienceType>
				<LearnRate>1</LearnRate>
			</li>
		</value>
	</Operation>
	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/TorannMagic.TMAbilityDef[defName="TM_SpineshatterDive_III"
											or defName="TM_DragonfireDive_III"
											or defName="TM_SpiralDive_III"
											or defName="TM_Disembowel_II"
											or defName="TM_Disembowel_III"]</xpath>
		<value>
			<li Class="LLRoM.AbilityXPGainExtension">
				<Proficiencies>
					<li>LLRoM_Coordination</li>
					<li>LLRoM_CQC</li>
					<li>LLRoM_Strength</li>
				</Proficiencies>
				<experienceType>Practical</experienceType>
				<LearnRate>1</LearnRate>
			</li>
		</value>
	</Operation>
</Patch>