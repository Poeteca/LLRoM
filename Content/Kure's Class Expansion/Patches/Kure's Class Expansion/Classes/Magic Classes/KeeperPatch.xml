<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<!--Learning Objects Patch-->
	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/ThingDef[defName="Torn_BookOfKeeper"]</xpath>
		<value>
			<li Class="LifeLessons.BillProficiencyExtension">
				<requirements>
					<li>LLRoM_Summon</li>
				</requirements>
				<hardRequirement>True</hardRequirement>
			</li>
		</value>
	</Operation>
	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/ThingDef[defName="BookOfKeeper"]</xpath>
		<value>
			<li Class="LifeLessons.BillProficiencyExtension">
				<requirements>
					<li>LLRoM_SummonII</li>
					<li>LLRoM_RawI</li>
				</requirements>
				<hardRequirement>True</hardRequirement>
			</li>
		</value>
	</Operation>
	<!--Learning object recipe patch-->
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="Torn_BookOfKeeper"]</xpath>
		<value>
			<costList>
				<RawMagicyte>50</RawMagicyte>
				<UnfinishedArcane>1</UnfinishedArcane>
			</costList>
			<recipeMaker>		    
				<workAmount>2500</workAmount>
				<workSpeedStat>WorkSpeedGlobal</workSpeedStat>
				<workSkill>Intellectual</workSkill>
				<recipeUsers>
					<li>TableMagicPrinter</li>
				</recipeUsers>
				<effectWorking>Smelt</effectWorking>
				<unfinishedThingDef>UnfinishedWeapon</unfinishedThingDef>
				<skillRequirements>
					<Crafting>4</Crafting>
					<Intellectual>8</Intellectual>
				</skillRequirements>
			</recipeMaker>
		</value>
	</Operation>
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="BookOfKeeper"]</xpath>
		<value>
			<costList>
				<RawMagicyte>100</RawMagicyte>
				<UnfinishedAdvArcane>1</UnfinishedAdvArcane>
			</costList>
			<recipeMaker>
				<workAmount>3500</workAmount>
				<workSpeedStat>WorkSpeedGlobal</workSpeedStat>
				<workSkill>Intellectual</workSkill>
				<recipeUsers>
					<li>TableMagicPrinter</li>
				</recipeUsers>
				<effectWorking>Smelt</effectWorking>
				<unfinishedThingDef>UnfinishedWeapon</unfinishedThingDef>
				<skillRequirements>
					<Crafting>6</Crafting>
					<Intellectual>8</Intellectual>
				</skillRequirements>
				<researchPrerequisite>
					<li>TM_AdvancedScribing</li>
				</researchPrerequisite>
			</recipeMaker>
		</value>
	</Operation>
	<!--Trait Patch-->
	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/TraitDef[defName="TM_Keeper"]</xpath>
		<value>
			<li Class="LifeLessons.BackstoryProficiencyExtension">
				<patchStatusOverride>False</patchStatusOverride>       
				<templates>
					<li>LLROM_Summon</li>
					<li>LLROM_RandomElemental</li>
				</templates>
				<package>
					<conditionalTemplates>
						<li>
							<options>
								<li>LLROM_Scribe</li>
							</options>
							<rolls>1</rolls>
							<chancePerRoll>.5</chancePerRoll>
						</li>
					</conditionalTemplates>
				</package>
			</li>
		</value>
	</Operation>
	
	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/TraitDef[defName="TM_Keeper"]</xpath>
		<value>
			<li Class="LLRoM.ClassAutoLearnExtension">
				<RequiredProficiencies>
					<li>LLRoM_SummonII</li>
					<li>LLRoM_RawI</li>
				</RequiredProficiencies>
				<RequiredTrait>
					<li>TM_Gifted</li>
				</RequiredTrait>
				<appliedHediff>LLRoM_Drained</appliedHediff>
				<Prefix>a </Prefix>
				<Magic>true</Magic>
			</li>
		</value>
	</Operation>
	<!--Ability Cast Patch-->
	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/TorannMagic.TMAbilityDef[defName="TM_ArcaneWallB"
											or defName="TM_Fortify"]</xpath>
		<value>
			<li Class="LLRoM.AbilityXPGainExtension">
				<Proficiencies>
					<li>LLRoM_Summon</li>
				</Proficiencies>
				<experienceType>Practical</experienceType>
				<LearnRate>1</LearnRate>
			</li>
		</value>
	</Operation>
	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/TorannMagic.TMAbilityDef[defName="TM_ArcaneWall_I"]</xpath>
		<value>
			<li Class="LLRoM.AbilityXPGainExtension">
				<Proficiencies>
					<li>LLRoM_Summon</li>
					<li>LLRoM_Defensive</li>
				</Proficiencies>
				<experienceType>Practical</experienceType>
				<LearnRate>1</LearnRate>
			</li>
		</value>
	</Operation>
	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/TorannMagic.TMAbilityDef[defName="TM_ArcaneWall_II"]</xpath>
		<value>
			<li Class="LLRoM.AbilityXPGainExtension">
				<Proficiencies>
					<li>LLRoM_SummonII</li>
					<li>LLRoM_Defensive</li>
				</Proficiencies>
				<experienceType>Practical</experienceType>
				<LearnRate>1</LearnRate>
			</li>
		</value>
	</Operation>
	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/TorannMagic.TMAbilityDef[defName="TM_ArcaneWall_III"]</xpath>
		<value>
			<li Class="LLRoM.AbilityXPGainExtension">
				<Proficiencies>
					<li>LLRoM_SummonII</li>
					<li>LLRoM_DefensiveBarrier</li>
				</Proficiencies>
				<experienceType>Practical</experienceType>
				<LearnRate>1</LearnRate>
			</li>
		</value>
	</Operation>
	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/TorannMagic.TMAbilityDef[defName="TM_EssenceChanneling"]</xpath>
		<value>
			<li Class="LLRoM.AbilityXPGainExtension">
				<Proficiencies>
					<li>LLRoM_SummonII</li>
					<li>LLRoM_Offensive</li>
				</Proficiencies>
				<experienceType>Practical</experienceType>
				<LearnRate>1</LearnRate>
			</li>
		</value>
	</Operation>
	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/TorannMagic.TMAbilityDef[defName="TM_Fortify_I"]</xpath>
		<value>
			<li Class="LLRoM.AbilityXPGainExtension">
				<Proficiencies>
					<li>LLRoM_Summon</li>
					<li>LLRoM_EarthI</li>
				</Proficiencies>
				<experienceType>Practical</experienceType>
				<LearnRate>1</LearnRate>
			</li>
		</value>
	</Operation>
	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/TorannMagic.TMAbilityDef[defName="TM_Fortify_II"
											or defName="TM_Fortify_III"]</xpath>
		<value>
			<li Class="LLRoM.AbilityXPGainExtension">
				<Proficiencies>
					<li>LLRoM_SummonII</li>
					<li>LLRoM_EarthII</li>
				</Proficiencies>
				<experienceType>Practical</experienceType>
				<LearnRate>1</LearnRate>
			</li>
		</value>
	</Operation>
</Patch>