<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<!--Learning Objects Patch-->
	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/ThingDef[defName="Torn_BookOfInnerFire"]</xpath>
		<value>
			<li Class="LifeLessons.BillProficiencyExtension">
				<requirements>
					<li>LLRoM_ScribI</li>
					<li>LLRoM_FireI</li>
				</requirements>
				<hardRequirement>True</hardRequirement>
			</li>
		</value>
	</Operation>
	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/ThingDef[defName="BookOfInnerFire"]</xpath>
		<value>
			<li Class="LifeLessons.BillProficiencyExtension">
				<requirements>
					<li>LLRoM_ScribII</li>
					<li>LLRoM_FireII</li>
				</requirements>
				<hardRequirement>True</hardRequirement>
			</li>
		</value>
	</Operation>
	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/ThingDef[defName="SpellOf_Firestorm"]</xpath>
		<value>
			<li Class="LifeLessons.BillProficiencyExtension">
				<requirements>
					<li>LLRoM_ScribIII</li>
					<li>LLRoM_FireIII</li>
				</requirements>
				<hardRequirement>True</hardRequirement>
			</li>
		</value>
	</Operation>
	<!--Ability Cast Patch-->
	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/TorannMagic.TMAbilityDef[defName="TM_RayofHope" or defName="TM_Firebolt"]</xpath>
		<value>
			<li Class="LLRoM.AbilityXPGainExtension">
				<Proficiencies>
					<li>Magic_Insight</li>
					<li>LLRoM_FireI</li>
				</Proficiencies>
				<experienceType>Practical</experienceType>
				<LearnRate>1</LearnRate>
			</li>
		</value>
	</Operation>
	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/TorannMagic.TMAbilityDef[defName="TM_RayofHope_I" or defName="TM_RayofHope_II" or defName="TM_Fireball" or defName="TM_Fireclaw"]</xpath>
		<value>
			<li Class="LLRoM.AbilityXPGainExtension">
				<Proficiencies>
					<li>Magic_Insight</li>
					<li>LLRoM_FireI</li>
					<li>LLRoM_FireII</li>
				</Proficiencies>
				<experienceType>Practical</experienceType>
				<LearnRate>1</LearnRate>
			</li>
		</value>
	</Operation>
	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/TorannMagic.TMAbilityDef[defName="TM_RayofHope_III" or defName="TM_Firestorm"]</xpath>
		<value>
			<li Class="LLRoM.AbilityXPGainExtension">
				<Proficiencies>
					<li>Magic_Insight</li>
					<li>LLRoM_FireI</li>
					<li>LLRoM_FireII</li>
					<li>LLRoM_FireIII</li>
				</Proficiencies>
				<experienceType>Practical</experienceType>
				<LearnRate>1</LearnRate>
			</li>
		</value>
	</Operation>
	<!--Hediff Patch-->
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/HediffDef[defName="TM_InnerFire_AuraHD"]/comps</xpath>
		<value>
			<li Class="LLRoM.HediffCompProperties_teacher">
				<proficiencies>
					<li>LLRoM_FireI</li>
				</proficiencies>
				<experienceType>Practical</experienceType>
				<learnrate>.1</learnrate>
			</li>
		</value>
	</Operation>
</Patch>