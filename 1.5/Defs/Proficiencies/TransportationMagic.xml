<?xml version="1.0" encoding="utf-8" ?>

<Defs>
<!--Common-->
	<LifeLessons.ProficiencyDef ParentName="ProficiencyMagic">
		<defName>LLRoM_Summon</defName>
		<label>Wyrcan Arcanus</label>
		<category>ProficiencyCategory_TransportationMagic</category>
		<description>The use of mana to create simple constructs and move objects.</description>
		<costTheoretical>100</costTheoretical>
		<costPractical>50</costPractical>
		<prerequisites>
			<li>Magic_Insight</li>
		</prerequisites>
		<viewerX>1</viewerX>
		<viewerY>14</viewerY>
		<baseLearningEffectiveness>1</baseLearningEffectiveness>
		<color>RGBA(0.412, 0.412, 0.412, 1.000)</color>
		<thoughtIcons>
			<li>UI/Buttons/UsePlanetDayNightSystem</li>
			<li>Things/Mote/Disoriented</li>
		</thoughtIcons>
		<practicalLearningActivityDefs>
			<li>LLRoM_MagicPonder</li>
			<li>LLRoM_UseScroll_Summon</li>
			<li>LLRoM_practice_magic</li>
			<li>LLRoM_practice_magic_mana</li>
			<li>LLRoM_UseScroll_LLRoM_Summon_Safe</li>
		</practicalLearningActivityDefs>
		<theoreticalLearningActivityDefs>
			<li>LLRoM_ReadMagicLearnObjectBase_Summon</li>
			<li>LLRoM_ExamineScroll_Summon</li>
			<li>LLDocument</li>
			<li>LLBrainstorm</li>
		</theoreticalLearningActivityDefs>
		<modExtensions>
			<li Class="LLRoM.ClassAutoLearnExtension">
				<Relatedtraits>
					<li>TM_Shaman</li>
				</Relatedtraits>
			</li>
		</modExtensions>
	</LifeLessons.ProficiencyDef>
	
